<!DOCTYPE html>
<html>
<head>
  <title>Burning Airlines</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
	<nav class="global-nav">
		<% if @current_user.present? %>
			
			<%= link_to 'Edit profile', edit_user_path(@current_user) %>
			<%= link_to "Logout #{ @current_user.name }", login_path, :method => 'delete', :data => { :confirm => "Are you sure you wish to logout?"} %>
			<%= link_to 'Flights', flights_path %>
			<%= link_to 'Search', root_path %>

			

					<%= link_to 'Planes', planes_path %>
					<%= link_to 'New Plane', new_plane_path %>
					<%= link_to 'New Flight', new_flight_path %>
					<%= link_to 'All Users', users_path %>

					<%= link_to 'Reservations', reservations_path %>
					<%= link_to 'New Reservations', new_reservation_path %>

			

		<% else %>
			<%= link_to "Log In", login_path %>
			<%= link_to 'New User', new_user_path %>
		<% end %>


	

	</nav> 

	<h1>Welcome to Queen G Airlines</h1>
	
	<div class='container'>

		<%= yield %>
	</div>

</body>
</html>
