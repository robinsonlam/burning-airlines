
<h2>Login</h2>

<%= form_tag '/login' do %>
	<p>
		<%= label_tag :email %>
		<%= text_field_tag :email, nil, :placeholder => "Email" %>
	</p>

	<p>
		<%= label_tag :password %>
		<%= password_field_tag :password, nil, :placeholder => "Password" %>
	</p>

	<p>
		<div class="button">
			<%= submit_tag 'Login' %>
		</div>
	</p>
<% end %>






