<p id="notice"><%= notice %></p>

<h1>Listing Reservations</h1>

<table>
  <thead>
    <tr>
      <!-- <th>Flight ID</th> -->
      <th>Flight Number</th>
      <!-- <th>User ID</th> -->
      <th>User Name</th>
      <!-- <th>Plane ID</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <!-- <td><%= reservation.flight_id %></td> -->
        <td><%= reservation.flight.flight_number %></td>
        <!-- <td><%= reservation.user_id %></td> -->
        <td><%= reservation.user.name %></td>
        <!-- <td><%= reservation.flight.plane_id %></td> -->
        <td><%= link_to 'Show', reservation %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

